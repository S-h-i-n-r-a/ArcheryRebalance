	<set xpath="/items/item[@name='gunBowT1WoodenBow']/effect_group[@name='sneak damage bonus']/display_value[@name='dEntityDamageSneak']/@value">3</set>
	
	<!-- Reduce noise -->
	<append xpath="/items/item[@name='gunBowT1WoodenBow']/effect_group[@name='gunBowT1WoodenBow']">
