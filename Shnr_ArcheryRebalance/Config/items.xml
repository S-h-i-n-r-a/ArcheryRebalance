<configs>

<!-- Bows -->

	<!-- Primitive Bow -->
	
	<!-- Sneak damage (Default = 2) -->
	<set xpath="/items/item[@name='gunBowT0PrimitiveBow']/effect_group[@name='sneak damage bonus']/passive_effect[@name='DamageBonus']/@value">3</set>
	<set xpath="/items/item[@name='gunBowT0PrimitiveBow']/effect_group[@name='sneak damage bonus']/passive_effect[@name='EntityDamage']/@value">3</set>
	<set xpath="/items/item[@name='gunBowT0PrimitiveBow']/effect_group[@name='sneak damage bonus']/display_value[@name='dEntityDamageSneak']/@value">3</set>
	
	<!-- Reduce noise -->
	<append xpath="/items/item[@name='gunBowT0PrimitiveBow']/effect_group[@name='gunBowT0PrimitiveBow']">
		<passive_effect name="NoiseMultiplier" operation="perc_add" value="-.02"/>
	</append>
	
	
	<!-- Wooden Bow -->
	
	<!-- Sneak damage (Default = 2) -->
