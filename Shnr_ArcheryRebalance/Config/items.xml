<!-- Crossbows -->
	
	<!-- Iron Crossbow -->
	
	<!-- Sneak damage (Default = 2) -->
	<set xpath="/items/item[@name='gunBowT1IronCrossbow']/effect_group[@name='sneak damage bonus']/passive_effect[@name='DamageBonus']/@value">1.5</set>
	<set xpath="/items/item[@name='gunBowT1IronCrossbow']/effect_group[@name='sneak damage bonus']/passive_effect[@name='EntityDamage']/@value">1.5</set>
	<set xpath="/items/item[@name='gunBowT1IronCrossbow']/effect_group[@name='sneak damage bonus']/display_value[@name='dEntityDamageSneak']/@value">1.5</set>
	
	<!-- Increase noise and entity penetration -->
	<append xpath="/items/item[@name='gunBowT1IronCrossbow']/effect_group[@name='gunBowT1IronCrossbow']">
		<passive_effect name="NoiseMultiplier" operation="perc_add" value=".04"/>
		<passive_effect name="EntityPenetrationCount" operation="base_add" value="1"/>
	</append>
	
	
	<!-- Compound Crossbow -->
	
	<!-- Sneak damage (Default = 2) -->
